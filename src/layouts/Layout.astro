<style is:global>
  @font-face {
      font-family: 'apercu';
      src: url('/apercu.woff2') format('woff2');
      font-weight: normal;
      font-style: normal;
      font-display: swap;
    }

	:root {
		--ink: 255, 255, 255;
    --paper: 0, 0, 0;
    --font: 'apercu', sans-serif;
	}

	html {
		font-family: var(--font);
		background: rgb(var(--paper));
	}

  body {
    margin: 0;
  }

  * {
    box-sizing: border-box;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }
</style>
<style>
	main {
		margin: auto;
		padding: 4rem 1rem;
		width: 700px;
		max-width: calc(100% - 2rem);
		font-size: 1.6rem;
		line-height: 1.6;
    color: rgb(var(--ink));
    text-transform: lowercase;
    
    @media (max-width: 700px) {
      padding: 3rem 25px 1rem;
      font-size: 1.2rem;
    }

    @media (max-width: 500px) {
      max-width: 100%;
    }
	}
  
	.logo {
    width: 250px;
    height: auto;
    padding-bottom: 1rem;
  }
  
	h1 {
		font-size: 4rem;
		font-weight: normal;
		line-height: 1.2;
		margin-bottom: 1em;

    @media (max-width: 800px) {
      font-size: 3rem;
    }

    @media (max-width: 600px) {
      font-size: 2.5rem;
    }

    @media (max-width: 500px) {
      font-size: 2rem;
    }
	}

  a {
    color: rgba(var(--ink), 1);

    &:hover {
      color: rgba(var(--ink), 0.7);
    }
  }


  .legal {
    padding-top: 4rem;
    opacity: 0.5;
  }
</style>
